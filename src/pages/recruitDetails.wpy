  }
.title{
  font-size:35rpx;
  display:block;
  font-weight: 600;
  background-color:#fff;
  padding: 40rpx 0;
}
.stitle{
  font-size:30rpx;
  display:block;
  font-weight: 600;
  background-color:#fff;
  padding: 20rpx 0 20rpx 20rpx;
  text-align: left;
}
  .general{
    font-size:25rpx;
    text-align:center;
    margin-bottom:40rpx;
    width:100%;
    color:#aaaaaa;
    margin-top: 40rpx;
  }
  .general text{
    margin: 0 20rpx;
  }
  .text {
    color:#858585;
    font-size:24rpx;
    text-align:right;
